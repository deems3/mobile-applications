<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkDemiBruls.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Button  x:Name="SessionBtn"
                Text="Start een spel"
                     BackgroundColor="White"
                     TextColor="Black"
                Clicked="CreateGame" />

            <Button  x:Name="GameRulesBtn"
                Text="Spelregels" 
                Clicked="ReadRules" />

            <Button  x:Name="CustomQuestionsBtn"
                Text="Gepersonaliseerde vragen" 
                Clicked="GoToCustomQuestions" />

            <Button Text="Open Database Browser" Clicked="OpenDatabaseBrowser" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>