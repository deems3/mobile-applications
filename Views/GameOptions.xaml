<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkDemiBruls.Views.GameOptions"
             Title="GameOptions">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="ThemeBtn"
            Text="Thema"
            Clicked="GoToThemes"
            Margin="20"/>

        <Button
            x:Name="QuestionsBtn"
            Text="Vragen"
            Clicked="GoToQuestions"
            Margin="20"/>

        <Button
            x:Name="GameOverviewBtn"
            Text="GameOverview"
            Clicked="GoToGameOverview"
            Margin="20"/>
        
    </VerticalStackLayout>
</ContentPage>