<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TruthOrDrinkDemiBruls.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TruthOrDrinkDemiBruls"
    xmlns:Views="clr-namespace:TruthOrDrinkDemiBruls.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TruthOrDrinkDemiBruls">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate Views:Login}"
        Route="Login" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate Views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Lobby"
        ContentTemplate="{DataTemplate Views:Lobby}"
        Route="Lobby" />

    <ShellContent
        Title="GameRules"
        ContentTemplate="{DataTemplate Views:GameRules}"
        Route="GameRuls" />

    <ShellContent
        Title="CustomQuestions"
        ContentTemplate="{DataTemplate Views:CustomQuestions}"
        Route="CustomQuestions" />

    <ShellContent
        Title="GameOptions"
        ContentTemplate="{DataTemplate Views:GameOptions}"
        Route="GameOptions" />

    <ShellContent
        Title="Oefenen"
        ContentTemplate="{DataTemplate Views:Oefenen}"
        Route="Oefenen" />



</Shell>
